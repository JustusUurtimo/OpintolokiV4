            Suoritus Tiep113 = new Suoritus(); 
            Tiep113.annaVakio(id2);
            opintoloki.lisaa(Tiep113);

            System.out.println("============= Opintolokin testi =================");

            for (int i = 0; i < opintoloki.KurssienMaara(); i++) {
                Kurssi kurssi = opintoloki.haeKurssi(i);
